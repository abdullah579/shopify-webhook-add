
<button is="loyal-button">
    <img src="{{ "medal.png" | asset_img_url: '25px' }}" height="45" width="45" loading="lazy"/>
</button>

<style>
    button[is="loyal-button"] {
        position: fixed;
        bottom: 15px; 
        right: 15px; 
        background-color: #fff;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22); 
        border: none;
        padding: 20px; 
        border-radius: 100px; 
        cursor: pointer;
    }
</style>


{% if customer %}
    <script>
        window.customerEmail = {{ customer.email | json }};
    </script>
    {% render 'loggedIn' %}
{% else %}
    {% render 'loggedOut' %}
{% endif %}


{% schema %}
    {
    "name": "Earn Points",
    "target": "body",
    "stylesheet": "point.css",
    "javascript": "lumin.js",
    "settings": []
    }
{% endschema %}